{% extends '::base.html.twig' %}

{% block meta_keywords %}
{% spaceless %}
{% if page.translation.metaKeywords %}
    {{ page.translation.metaKeywords }}
{% else %}
    {{ site.translation.metaKeywords }}
{% endif %}
{% endspaceless %}
{% endblock %}

{% block meta_description %}
{% spaceless %}
{% if page.translation.metaDescription %}
    {{ page.translation.metaDescription }}
{% else %}
    {{ site.translation.metaDescription }}
{% endif %}
{% endspaceless %}
{% endblock %}

{% block meta_title %}
{% spaceless %}
{% if page.translation.metaTitle %}
    {{ page.translation.metaTitle }}
{% else %}
    {{ block('title')|striptags }}
{% endif %}
{% endspaceless %}
{% endblock %}

{% block brand %}
{{ site.translation.brand|raw }}
{% endblock %}

{% block head_title %}{{ page.translation.title }}{% endblock %}

{% block title %}{{ page.translation.title }}{% endblock %}

{% block css %}
{{ page.css|raw }}
{% endblock css %}

{% block js %}
{{ page.js|raw }}
{% endblock js %}

{% block page_content %}
    {% set content = block('content') %}
    {% if content %}
        {{ content|raw }}
    {% else %}
        {{ page.translation.body|raw }}
    {% endif %}
{% endblock %}
