{% extends '::base.html.twig' %}

{% block meta_keywords %}
{% spaceless %}
{% if page.translation.metaKeywords %}
    {{ page.translation.metaKeywords }}
{% else %}
    {{ site.translation.metaKeywords }}
{% endif %}
{% endspaceless %}
{% endblock meta_keywords %}

{% block meta_description %}
{% spaceless %}
{% if page.translation.metaDescription %}
    {{ page.translation.metaDescription }}
{% else %}
    {{ site.translation.metaDescription }}
{% endif %}
{% endspaceless %}
{% endblock meta_description %}

{% block brand %}
{{ site.translation.brand|raw }}
{% endblock brand %}

{% block head_title %}{{ page.translation.title }}{% endblock %}

{% block title %}{% if page.showTitle %}{{ page.translation.title }}{% endif %}{% endblock %}

{% block css %}
{{ page.css|raw }}
{% endblock css %}

{% block js %}
{{ page.js|raw }}
{% endblock js %}

{% block page_content %}
    {% set content = block('content') %}
    {% if content %}
        {{ content|raw }}
    {% else %}
        {{ page.translation.body|raw }}
    {% endif %}
{% endblock page_content %}
