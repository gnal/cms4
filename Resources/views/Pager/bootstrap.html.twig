{% set paginator_attr = paginator.options.attr|merge({'class': (paginator.options.attr.class|default('')~' pagination pagination-sm')|trim}) %}
<ul{% for attrname, attrvalue in paginator_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
    {% for item in pagination %}
        {% set item_attr = item.attr %}
        <li{% for attrname, attrvalue in item_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}><a href="{{ item.url }}">{{ item.label|raw }}</a></li>
    {% endfor %}
</ul>
