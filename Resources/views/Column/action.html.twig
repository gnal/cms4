    {% for key, val in column.options.actions %}
        <a class="btn btn-default btn-small" href="{% if val != '#' %}{{ path(val, {'id': row.id, 'parentId': app.request.query.get('parentId')}) }}{% else %}{{ val }}{% endif %}">{{ key|raw }}</a>
    {% endfor %}

    {% if grid.admin.isGranted('update') and column.options.edit %}
        <a title="{{ 'Edit'|trans }}" href="{{ grid.admin.genUrl('edit', {'id': row.id}) }}" class="btn btn-default btn-small"><i class="icon-large icon-pencil"></i></a>
    {% endif %}

    {% if grid.admin.isGranted('delete') and column.options.delete %}
        <a title="{{ 'Delete'|trans }}" class="btn btn-default btn-small msi_admin_admin_delete" href="{{ grid.admin.genUrl('delete', {'id': row.id}) }}"><i class="icon-large icon-trash"></i></a>
    {% endif %}
</div>
