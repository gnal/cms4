{% form_theme form 'MsiCmfBundle:Form:form.html.twig' %}

<div class="tab-content">
    <div class="tab-pane fade active in" id="tab1">
        <fieldset>
            {{ form_row(form.host) }}
            {{ form_row(form.isDefault) }}
            <ul class="nav nav-tabs">
                {% for translation in form.translations %}
                <li{% if loop.index == 1 %} class="active"{% endif %}><a href="#translation1{{ translation.get('value').locale }}" data-toggle="tab">{{ translation.get('value').locale|trans|capitalize }}</a></li>
                {% endfor %}
            </ul>
            <div class="tab-content">
                {% for translation in form.translations %}
                    <div class="tab-pane fade{% if loop.index == 1 %} active in{% endif %}" id="translation1{{ translation.get('value').locale }}">
                        {{ form_row(translation.brand) }}
                        {{ form_row(translation.offlineMessage) }}
                    </div>
                {% endfor %}
            </div>
        </fieldset>
    </div>

    <div class="tab-pane fade" id="tab2">
        <fieldset>
            {{ form_row(form.locale) }}
            {{ form_row(form.locales) }}
        </fieldset>
    </div>

    <div class="tab-pane fade" id="tab3">
        <fieldset>
            <ul class="nav nav-tabs">
                {% for translation in form.translations %}
                <li{% if loop.index == 1 %} class="active"{% endif %}><a href="#translation2{{ translation.get('value').locale }}" data-toggle="tab">{{ translation.get('value').locale|trans|capitalize }}</a></li>
                {% endfor %}
            </ul>
            <div class="tab-content">
                {% for translation in form.translations %}
                    <div class="tab-pane fade{% if loop.index == 1 %} active in{% endif %}" id="translation2{{ translation.get('value').locale }}">
                        {{ form_row(translation.metaKeywords) }}
                        {{ form_row(translation.metaDescription) }}
                    </div>
                {% endfor %}
            </div>
        </fieldset>
    </div>
</div>

{{ form_rest(form) }}
