{# Rows #}

{% block form_row %}
{% spaceless %}
    {% if form.count %}
        {{ form_widget(form) }}
    {% else %}
        {% if form.vars.block_prefixes.2 != 'checkbox' %}
        <div class="form-group{% if form.vars.errors|length %} has-error{% endif %}">
            {{ form_label(form) }}
        {% endif %}
            {{ form_widget(form) }}
            {% if form.vars.attr['data-help'] is defined %}<span class="help-block">{{ attr['data-help'] }}</span>{% endif %}
            {{ form_errors(form) }}
        {% if form.vars.block_prefixes.2 != 'checkbox' %}
        </div>
        {% endif %}
    {% endif %}
{% endspaceless %}
{% endblock form_row %}

{# Labels #}

{% block form_label %}
{% spaceless %}
    {% if label is not sameas(false) %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}
        {% if not compound %}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {% endif %}
        {% if required %}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {% endif %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
    {% endif %}
{% endspaceless %}
{% endblock form_label %}

{# Misc #}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-block">{{ error.message }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{# Widgets #}

{% block datetime_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div class="form-group">
            {{ form_label(form) }}
            {{ form_widget(form.date) }}
            {{ form_errors(form.date) }}
            {{ form_widget(form.time) }}
            {{ form_errors(form.time) }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock datetime_widget %}

{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            <div class="input-group">
                {{ form_widget(form.day) }}
                <span class="input-group-addon">-</span>
                {{ form_widget(form.month) }}
                <span class="input-group-addon">-</span>
                {{ form_widget(form.year) }}
            </div>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        {% set vars = widget == 'text' ? { 'attr': { 'size': 1 }} : {} %}
        <div {{ block('widget_container_attributes') }}>
            <div class="input-group">
                {{ form_widget(form.hour, vars) }}
                <span class="input-group-addon">:</span>
                {{ form_widget(form.minute, vars) }}
            </div>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock time_widget %}

{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} class="form-control" {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% endblock form_widget_simple %}

{% block textarea_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }} class="form-control">{{ value }}</textarea>
    {% if attr.class is not defined %}
        {#<div class="char-count" style="margin-top:5px;line-height:20px;"></div>#}
    {% endif %}
{% endspaceless %}
{% endblock textarea_widget %}

{% block choice_widget_collapsed %}
{% spaceless %}
    <select {{ block('widget_attributes') }} class="form-control"{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value=""{% if required %} disabled="disabled"{% if value is empty %} selected="selected"{% endif %}{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block checkbox_widget %}
{% spaceless %}
    <div class="checkbox">
        <label>
            <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
            {% if multiple is defined %}
                {{ label|trans }}
            {% else %}
                {% set label = form.parent.name~'.'~form.vars.name %}
                {{ label|trans }}
            {% endif %}
        </label>
    </div>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block radio_widget %}
{% spaceless %}
    <label class="radio">
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        {% if multiple is defined %}{{ label|trans }}{% endif %}
        {{ form_errors(form) }}
    </label>
{% endspaceless %}
{% endblock radio_widget %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div class="btn-toolbar">
        <button class="btn btn-default btn-select-all">{{ 'All'|trans }}</button>
        <button class="btn btn-default btn-select-none">{{ 'None'|trans }}</button>
    </div>
    <div>
    {% for child in form %}
        {{ form_widget(child, {'multiple': 'multiple'}) }}
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock collection_widget %}
