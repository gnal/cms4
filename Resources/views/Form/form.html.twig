{# Rows #}

{% block form_row %}
{% spaceless %}
        {% if form.count == false %}
            <div class="{% if form.vars.name != 'settings' %}form-group{% endif %}{% if form.vars.errors|length > 0 %} error{% endif %}">
                {% if form.vars.label != ' ' %}{{ form_label(form) }}{% endif %}
                {{ form_widget(form) }}
                {# View uploaded file button #}
                {#{% if form.parent.vars.value.filename is defined and form.parent.vars.value.filename and form.name == 'file' %}
                    <div class="btn-toolbar" style="display: inline">
                        <a class="btn btn-mini" target="_blank" href="{{ form.parent.vars.value.pathname('filename') }}">{{ 'View file'|trans }}</a>
                        {% if form.parent.vars.value.locale is defined %}
                            {%  set url = path(app.request.attributes.get('_admin')~'_deleteUpload', {'locale': form.parent.vars.value.locale, 'id': app.request.attributes.get('id')}) %}
                        {% else %}
                            {%  set url = path(app.request.attributes.get('_admin')~'_deleteUpload', {'id': app.request.attributes.get('id')}) %}
                        {% endif %}
                        <a class="btn btn-danger btn-mini msi_admin_admin_deleteUpload" href="{{ url }}">{{ 'Delete file'|trans }}</a>
                    </div>
                {% endif %}#}
                {#{{ form_errors(form) }}#}
            </div>
        {% else %}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        {% endif %}
{% endspaceless %}
{% endblock form_row %}

{# Labels #}

{% block form_label %}
{% spaceless %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' col-lg-3 control-label')|trim}) %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}

{# Misc #}

{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-block" style="color: #b94a48;">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}

{# Widgets #}

{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <div class="col-lg-6">
        <input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        {% if attr['data-help'] is defined %}<span class="help-block">{{ attr['data-help'] }}</span>{% endif %}
    </div>
    <div class="col-lg-3">
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_widget_simple %}

{% block textarea_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    {{ form_errors(form) }}
    {% if attr.class is not defined %}
        <div class="char-count" style="margin-top:5px;line-height:20px;"></div>
    {% endif %}
    {% if attr['data-help'] is defined %}<span class="help-block"><small>{{ attr['data-help'] }}</small></span>{% endif %}
{% endspaceless %}
{% endblock textarea_widget %}

{% block choice_widget_collapsed %}
{% spaceless %}
    <div class="col-lg-6">
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value=""{% if required %} disabled="disabled"{% if value is empty %} selected="selected"{% endif %}{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
    </div>
    <div class="col-lg-3">
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block checkbox_widget %}
{% spaceless %}
    <div class="col-lg-{% if multiple is defined %}9{% else %}6{% endif %}">
        <div class="checkbox">
            <label>
                <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
                {% if multiple is defined %}{{ label|trans }}{% endif %}
            </label>
        </div>
    </div>
    <div class="col-lg-3">
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block radio_widget %}
{% spaceless %}
    <label class="radio">
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        {% if multiple is defined %}{{ label|trans }}{% endif %}
        {{ form_errors(form) }}
    </label>
{% endspaceless %}
{% endblock radio_widget %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div class="btn-toolbar">
        <button class="btn btn-default btn-small btn-select-all">{{ 'All'|trans }}</button>
        <button class="btn btn-default btn-small btn-select-none">{{ 'None'|trans }}</button>
    </div>
    <div class="form-group">
        {{ form_label(form) }}
        <div class="clearfix"></div>
        <div {{ block('widget_container_attributes') }}>
        {% for child in form %}
            {{ form_widget(child, {'multiple': 'multiple'}) }}
        {% endfor %}
        </div>
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block field_rows %}
{% spaceless %}
    <div class="form-group">
        <div class="controls" style="margin-left: 155px;">{{ form_errors(form) }}</div>
    </div>
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}

{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    {{ block('form_collection_widget') }}
{% endspaceless %}
{% endblock collection_widget %}

{% block form_collection_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        {{ block('collection_field_rows') }}
        {{ form_rest(form) }}
    </div>
{% endspaceless %}
{% endblock form_collection_widget %}

{% block collection_field_rows %}
{% spaceless %}
    {{ form_errors(form) }}
    {% for child in form %}
        <h6 style="margin-bottom:20px;border-bottom:1px solid #eeeeee;">{{ child.vars.value.locale|upper }}</h6>
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock collection_field_rows %}
