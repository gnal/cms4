{% extends 'MsiAdminBundle::layout.html.twig' %}

{% block title %}{{ 'add'|trans|capitalize }} {{ admin.label }}{% endblock title %}

{% block actions %}
<button class="btn btn-primary msi_admin_save"><i class="icon-save icon-large"></i> {{ 'save'|trans }}</button>
{#<button class="btn btn-default msi_admin_save_quit"><i class="icon-ok-sign icon-large"></i> {{ 'save_quit'|trans }}</button>#}
<button class="btn btn-success msi_admin_save_add"><i class="icon-plus-sign icon-large"></i> {{ 'save_add'|trans }}</button>
{% endblock actions %}

{% block content %}
<form novalidate class="robojax-form" action="{{ admin.genUrl('new') }}" method="POST" {{ form_enctype(form) }}>
    {% include admin.getOption('form_template') %}
</form>
{% endblock %}

{% block sidebar %}{% include admin.getOption('sidebar_template') %}{% endblock %}

{% block js %}
{{ parent() }}
{% include admin.container.getParameter('msi_admin.tiny_mce') %}
<script src="{{ asset('bundles/msiadmin/js/save.js') }}"></script>

{% if admin.getOption('form_js_template') %}
{% include admin.getOption('form_js_template') %}
{% endif %}
{% endblock js %}
