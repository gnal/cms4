{% extends 'MsiAdminBundle::layout.html.twig' %}

{% block title %}{{ 'edit'|trans }} {{ admin.label }} <small>{{ admin.object }}</small>{% endblock title %}

{% block actions %}
<button class="btn btn-primary msi_admin_save"><i class="icon-edit-sign icon-large"></i> {{ 'save'|trans }}</button>
<button class="btn btn-default msi_admin_save_quit"><i class="icon-check-sign icon-large"></i> {{ 'save_quit'|trans }}</button>
{% endblock actions %}

{% block content %}
<form novalidate class="robojax-form" action="{{ admin.genUrl('edit', {'id': admin.object.id}) }}" method="POST" {{ form_enctype(form) }}>
    {% include admin.getOption('form_template') %}
</form>
{% endblock %}

{% block js %}
{{ parent() }}
{% include admin.container.getParameter('msi_admin.tiny_mce') %}
<script src="{{ asset('bundles/msiadmin/js/save.js') }}"></script>
{% if admin.getOption('form_js_template') %}{% include admin.getOption('form_js_template') %}{% endif %}
{% endblock js %}

{% block sidebar %}
{% if admin.getOption('sidebar_template') %}{% include admin.getOption('sidebar_template') %}{% endif %}
{% endblock %}
