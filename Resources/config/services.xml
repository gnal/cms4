<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="msi_admin.request_listener.class">Msi\AdminBundle\EventListener\RequestListener</parameter>
        <parameter key="msi_admin.manager.class">Msi\AdminBundle\Manager\Manager</parameter>
    </parameters>

    <services>
        <service id="msi_admin.request_listener" class="%msi_admin.request_listener.class%" scope="request">
            <argument type="service" id="msi_admin.site_provider" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="msi_admin.timestampable_listener" class="Msi\AdminBundle\Doctrine\Extension\Timestampable\TimestampableListener">
            <tag name="doctrine.event_subscriber"></tag>
        </service>

        <service id="msi_admin.translatable_listener" class="Msi\AdminBundle\Doctrine\Extension\Translatable\TranslatableListener">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_subscriber"></tag>
        </service>

        <service id="msi_admin.uploadable_listener" class="Msi\AdminBundle\Doctrine\Extension\Uploadable\UploadableListener" public="false">
            <tag name="doctrine.event_subscriber"></tag>
        </service>

        <service id="msi_admin.admin.form.handler" class="Msi\AdminBundle\Form\Handler\AdminFormHandler" scope="request">
            <argument type="service" id="request" />
        </service>

        <service id="msi_admin.filter.form.handler" class="Msi\AdminBundle\Form\Handler\FilterFormHandler" scope="request">
            <argument type="service" id="request" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>

        <service id="msi_admin.admin_loader" class="Msi\AdminBundle\Routing\AdminLoader">
            <argument type="service" id="service_container" />
            <tag name="routing.loader"></tag>
        </service>

        <service id="msi_admin.manager" class="%msi_admin.manager.class%" abstract="true">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.default_entity_manager" />
            </call>
        </service>

        <service id="msi_admin.admin" class="Msi\AdminBundle\Admin\Admin" abstract="true">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="msi_admin.admin.twig.extension" class="Msi\AdminBundle\Twig\Extension\AdminExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>

        <service id="msi_admin.block.twig.extension" class="Msi\AdminBundle\Twig\Extension\BlockExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>

        <service id="msi_admin.pager.factory" class="Msi\AdminBundle\Pager\PagerFactory" />

        <service id="msi_admin.pager.twig.extension" class="Msi\AdminBundle\Twig\Extension\PagerExtension" public="false">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>


        <service id="msi_admin.block.handler" class="Msi\AdminBundle\Block\BlockHandler" abstract="true">
            <argument>%msi_admin.block.slots%</argument>
        </service>

        <service id="msi_admin.text.block.handler" class="Msi\AdminBundle\Block\Handler\TextBlockHandler" parent="msi_admin.block.handler">
        </service>

        <service id="msi_admin.action.block.handler" class="Msi\AdminBundle\Block\Handler\ActionBlockHandler" parent="msi_admin.block.handler">
            <argument>%msi_admin.block.actions%</argument>
            <argument type="service" id="http_kernel" />
        </service>

        <service id="msi_admin.template.block.handler" class="Msi\AdminBundle\Block\Handler\TemplateBlockHandler" parent="msi_admin.block.handler">
            <argument>%msi_admin.block.templates%</argument>
            <argument type="service" id="templating" />
        </service>

        <service id="msi_admin.settings.form.type" class="Msi\AdminBundle\Form\Type\SettingsType">
            <tag name="form.type" alias="msi_block_settings" />
        </service>
    </services>

</container>
